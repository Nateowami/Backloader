{
  "manifest_version": 2,

  "name": "Backloader",
  "version": "0.1.0",
  "description": "A Chrome extension to redirect CDN requests to another CDN",

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],

  "background": {
    "scripts": ["scripts/list.js", "scripts/background.js"],
    "css": ["popup.css"]
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Backloader"
  },
  
  "icons": {
    "128": "icon.png"
  }
  
}
